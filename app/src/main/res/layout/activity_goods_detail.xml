<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.luoyp.brnmall.activity.GoodsDetailActivity">

    <include layout="@layout/topbar"/>

    <ListView
        android:id="@+id/lv_goods_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:drawableTop="@drawable/dianpu"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="店铺"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="12sp"
            android:onClick="toStore"/>

        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:drawableTop="@drawable/shoucang"
            android:gravity="center_vertical"
            android:onClick="addFavorite"
            android:paddingTop="5dp"
            android:text="收藏"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_buynow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#FA7329"
                android:gravity="center"
                android:onClick="buynow"

                android:text="立即购买"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_addtocart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_red_light"
            android:gravity="center_vertical"
            android:onClick="addCart"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="加入购物车"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
